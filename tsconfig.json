{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx"
  ],
  "strict": true
}
